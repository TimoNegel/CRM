@page "/services/view"

<MudButton Class="mb-8" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" OnClick="() => NavigateToCreateServicePage()">Service hinzufügen</MudButton>

<MudDataGrid T="Service" Items="@servicesListe" Filterable="true" FilterMode="DataGridFilterMode.ColumnFilterMenu" FilterCaseSensitivity="DataGridFilterCaseSensitivity.Default" RowClick="@((context) => NavigateToViewServicePage(context.Item.Id))">
    <Columns>
        <PropertyColumn Property="x => x.ServiceName" />
        <PropertyColumn Property="x => x.AufwandsZeit" />
        <PropertyColumn Property="x => x.Preis" />
        <TemplateColumn CellClass="d-flex justify-center">
            <CellTemplate Context="context">
                <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" OnClick="() => NavigateToEditServicePage(context.Item.Id)" />
                <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" OnClick="() => DeleteService(context.Item.Id)" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>

@code {
    private List<Service> servicesListe = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        servicesListe = await context.Services.ToListAsync();
    }

    private async Task DeleteService(Guid serviceId)
    {
        using var context = DbFactory.CreateDbContext();
        var service = context.Services.FirstOrDefault(s => s.Id == serviceId);
        if (service != null)
        {
            context.Services.Remove(service);
            await context.SaveChangesAsync();
            servicesListe = context.Services.ToList();
            StateHasChanged();
        }
    }

    private void NavigateToEditServicePage(Guid id)
    {
        Navigation.NavigateTo($"/service/edit/{id}");
    }

    private void NavigateToCreateServicePage()
    {
        Navigation.NavigateTo($"/service/create");
    }


    private void NavigateToViewServicePage(Guid id)
    {
        Navigation.NavigateTo($"/service/view/{id}");
    }
}
